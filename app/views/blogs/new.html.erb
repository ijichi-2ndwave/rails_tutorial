<h1>新規投稿</h1>
<%= form_for @blog do |f| %>
    <p>
    <!--%= f.label :user_id, current_user.user_name %-->
    <%= f.hidden_field :user_id, value: @user.id %>
    </p>
    <p>
    <%= f.label(:title, "タイトル") %>
    <%= f.text_field :title %>
    </p>
    <p>
    <%= f.label :content, "記事の内容" %>
    <%= f.text_area :content %>
    </p>
    <% if @blog.errors.any? %>
        <p>エラー!</p>
        <%= render 'layouts/error_messages', model: f.object %>
    <% end %>
    <%= f.submit "登録" %>
<th><%= link_to "一覧", blogs_path %></th>
  <% end %>

