<h1>新規投稿</h1>
<%= form_for @blog do |f| %>
    <p>
    <%= f.label(:title, "タイトル") %>
    <%= f.text_field :title %>
    </p>
    <p>
    <%= f.label :content, "記事の内容" %>
    <%= f.text_area :content %>
    </p>
    <% if @blog.errors.any? %>
        <p>エラー!</p>
    <% end %>
    <%= f.submit "登録" %>
<th><%= link_to "一覧", blogs_path %></th>
  <% end %>

